{
  "name": "@signpdf/signpdf",
  "version": "1.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/gepd/node-signpdf"
  },
  "license": "MIT",
  "engines": {
    "node": ">=12"
  },
  "main": "dist/signpdf.js",
  "types": "dist/signpdf.d.ts",
  "scripts": {
    "test": "./node_modules/.bin/jest",
    "build": "yarn build:clean && yarn build:compile && yarn build:types",
    "lint": "eslint -c .eslintrc --ignore-path .eslintignore ./",
    "build:clean": "rm -rf ./dist/*",
    "build:compile": "babel ./src -d ./dist --ignore \"**/*.test.js\"",
    "build:types": "yarn build:types:compile && yarn build:types:verify",
    "build:types:compile": "tsc",
    "build:types:verify": "tsd --files=index.test-d.ts"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.4.0",
    "@babel/eslint-parser": "^7.16.3",
    "@babel/node": "^7.0.0",
    "@babel/plugin-syntax-object-rest-spread": "^7.0.0",
    "@babel/preset-env": "^7.4.2",
    "@types/node": ">=12.0.0",
    "@types/node-forge": "^1.2.1",
    "assertion-error": "^1.1.0",
    "babel-jest": "^27.3.1",
    "babel-plugin-module-resolver": "^3.1.1",
    "eslint": "^8.50.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-import-resolver-babel-module": "^5.3.1",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^25.2.4",
    "jest": "^27.3.1",
    "tsd": "^0.30.7",
    "typescript": "^5.2.2"
  },
  "dependencies": {}
}